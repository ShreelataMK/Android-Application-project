<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="#508C0A"
        android:gravity="center"
        android:padding="20sp"
        android:text="APPOINTMENT"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:padding="20sp"
            android:text="At HealthWellness, we believe that delivering great patient outcomes as well as patient experience require the closest teamwork.  While the doctor is central to what we do, he/she is part of a larger care team that delivers world-class primary care.  So you will meet at each of our centres, a well qualified and trained team of nurses, physiotherapists, dieticians, technicians, physician assistants, phlebotomists, pharmacists and member service coordinators.  Together, this team ensures you are always on top of your health!"
            android:textColor="#E91E63" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="123dp"
            android:layout_marginLeft="120sp"
            app:srcCompat="@drawable/download" />


        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"></Button>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:text="Center timings : Monday: 8 am to 4 pm Tuesday to Saturday: 8 am to 9 pm Sunday: 8 am to 4 pm"
            android:textColor="#090909"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:text="Casa Rio, Lodha Palava, Kalyan - Shilphata Road, Usarghar Gaon, Thane,0251-6696592 / 0251-6696593 Our Services ( View details ) "
            android:textColor="#040404"
            android:textStyle="bold|italic" />

    </LinearLayout>


</ScrollView>