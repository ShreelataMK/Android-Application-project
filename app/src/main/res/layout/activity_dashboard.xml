<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:paddingLeft="20sp"
        android:text="Login SuccessFully, Email ="
        android:textColor="#E91E63"
        android:textSize="20dp" />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="#03A9F4"
        android:text="LOGOUT"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="#508C0A"
        android:gravity="center"
        android:padding="20sp"
        android:text="ENTER SYMPTOMS"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextsymp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Enter Symptom"
        android:inputType="textPersonName"
        android:text="Enter Symptom" />

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10sp"
        android:background="#009688"
        android:text="Search"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#7C4C06"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewSymp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#7C4C06"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewSymp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#7C4C06"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#7C4C06"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#7C4C06"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewExpert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="TextView"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewappt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:text="Click this link for place an appointment."
            android:textColor="#2196F3"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:visibility="invisible" />

    </LinearLayout>


</ScrollView>